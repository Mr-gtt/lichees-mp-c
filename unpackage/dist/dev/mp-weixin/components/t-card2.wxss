
.cardView{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	border-radius: 30rpx;
	/* height: 200upx; */
	/* margin-bottom: 0.5em; */
	padding:  30rpx 30rpx 15rpx 30rpx;
	background-color: #FFFFFF;
}
.press{
	background-color: #e8e8ee;
}
.cardView .cardTop .mainInfo .cardTitle{
	font-size: 1.15em;
	margin-bottom: 8rpx;
	width: 90%;
	
	/* height: 1.3em; */
}
.cardView .cardTop {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-align-self:center;
	        align-self:center;
}
.cardView .cardTop  .colorBar{
	background-color: #007AFF;

	margin-top: 16rpx;
	margin-bottom: 10rpx;
	width: 10rpx;
	border-radius: 6rpx;
	margin-right: 18rpx;
}
.cardView .cardTop .startDate{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	/* justify-content: space-between; */
	/* margin-top: 20upx; */
	margin-right: 10rpx;
	/* align-content:center; */
	-webkit-align-self:center;
	        align-self:center
}
.cardView .cardTop .startDate text{
	font-weight: 1.5rpx;
}
.cardView .cardTop .mainInfo{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;

	width: 80%;
	max-width: 80%;
	/* height: 3em; */
}
