.cardView .card .mainInfo .location .locationText,
.timeText{
	color: #9B9B9F; 
	font-size: 0.9em;
}
.cardView .memberList{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-right:8%;
	/* flex-direction: row-reverse; */
	/* justify-content:flex-end; */
}
.cardView .memberList .member{
	background-color: #d9d9df;
	height: 60rpx;
	width: 60rpx;
	border-radius: 30rpx;
	margin-right: -30rpx;
	z-index: 1;
	box-shadow: 3rpx 3rpx 10rpx #d0d0d0;
	border:1rpx solid #c3c3c3;
}
.cardView .postTime{
	color: #555555; 
	font-size: 0.9em;
	margin-right: auto; 
	-webkit-align-self: center; 
	        align-self: center;
}
.nowrap{
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.cardView  .longtap{
	-webkit-animation: scaleDraw 1000ms ease-in-out;
	        animation: scaleDraw 1000ms ease-in-out;
}
@-webkit-keyframes  scaleDraw {  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
0%{
                -webkit-transform: scale(0.8);
                        transform: scale(0.8);  /*开始为原始大小*/
}
50%{
                -webkit-transform: scale(1.1);
                        transform: scale(1.1);
}
75%{
                -webkit-transform: scale(1);
                        transform: scale(1);
}
}
@keyframes  scaleDraw {  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
0%{
                -webkit-transform: scale(0.8);
                        transform: scale(0.8);  /*开始为原始大小*/
}
50%{
                -webkit-transform: scale(1.1);
                        transform: scale(1.1);
}
75%{
                -webkit-transform: scale(1);
                        transform: scale(1);
}
}


