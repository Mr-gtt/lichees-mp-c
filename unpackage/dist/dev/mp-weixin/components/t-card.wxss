
.cardView{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	border-radius: 30rpx;
	/* height: 200upx; */
	margin-bottom: 0.5em;
	padding:  30rpx 30rpx 15rpx 30rpx;
	background-color: #FFFFFF;
}
.press{

	background-color: #f5f5f5;
}
.cardView .card .mainInfo .cardTitle{
	font-size: 1.15em;
	margin-bottom: 5rpx;
	/* height: 1.3em; */
}
.cardView .card {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-align-self: stretch;
	        align-self: stretch;
}
.cardView .card  .colorBar{
	background-color: #007AFF;

	margin-top: 13rpx;
	margin-bottom: 13rpx;
	width: 12rpx;
	border-radius: 8rpx;
	margin-right: 30rpx;
}
.cardView .card .classTime{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	/* margin-top: 20upx; */
	margin-right: 30rpx;
}
.cardView .card .classTime text{
	font-weight: bold;
}
.cardView .card .mainInfo{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	width: 85%;
	/* height: 3em; */
}
