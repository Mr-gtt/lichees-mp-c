
.topbar{
	background-color: #FFFFFF;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1000;
	border-bottom: 1rpx solid #BFBEC3;
	/* border-radius: 0 0 40upx 40upx; */
	/* height: 150upx; */
}
.topbar .welcome{
	font-size: 1.3em;
	margin-left: 10%;
}
.topbar .saying{
	margin-left: 10%;
}
.topbar .topTaplist{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: start;
	-webkit-align-items: start;
	        align-items: start;
	height: 100rpx;
	/* margin-left: 20upx; */
}
.topbar .topTaplist .item{
	margin-top: 20rpx;
	margin-bottom: 10rpx;
	width: 100rpx;
/* 	margin-left: 30upx;
	margin-right: 30upx; */
	/* margin-right: auto; */
	padding: 10rpx 20rpx;
	width: 13%;
	background-color: #FFFFFF;
	border-radius: 18rpx;
	font-size: 1em;
	text-align:center;
	color: grey;
}
.topbar .topTaplist .active  {
	background-color: #1b97f5;
	/* border-bottom: 8upx solid #22A7F0; */
	color: #ffffff;
	-webkit-transition: .5s ease;
	transition: .5s ease;
}

