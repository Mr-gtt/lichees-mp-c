
.topbar{
	background-color: #FFFFFF;
	-webkit-border-radius: 0 0 40rpx 40rpx;
	        border-radius: 0 0 40rpx 40rpx;
	/* height: 100upx; */
}
.topbar .welcome{
	font-size: 1.79em;
	margin-left: 10%;
}
.topbar .saying{
	margin-left: 10%;
}
.topbar .topTaplist{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: start;
	-webkit-align-items: start;
	        align-items: start;
	/* margin-left: 20upx; */
}
.topbar .topTaplist .item{
	margin-top: 20rpx;
	margin-bottom: 30rpx;
	margin-left: 2%;
	margin-right: 2%;
	/* margin-right: auto; */
	padding: 10rpx 30rpx;
	width: 13%;
	background-color: #FFFFFF;
	-webkit-border-radius: 1.5em;
	        border-radius: 1.5em;
	font-size: 1.2em;
	text-align:center;
	color: grey;
}
.topbar .topTaplist .active{
	background-color: #1b97f5;
	color: #FFFFFF;
}

